	<script>
		function handleReason() {
      const select = document.getElementById('reasonSelect');
      const messageBox = document.getElementById('messageBox');
      const reason = select.value;

      const messages = {
        'Quote': 'I‚Äôd be happy to quote you for a new phone! Please call or text me during business hours.',
        'Bill': 'I would love to take a look. It is highly recommended to speak to the billing department following our conversation for reassurance.',
        'buy': 'Awesome! We have new models in stock. Come by the store or call us for availability.',
        'info': 'Feel free to explore and reach out if you have any questions!'
      };

      if (reason && messages[reason]) {
        messageBox.textContent = messages[reason];
        messageBox.style.display = 'block';
      } else {
        messageBox.style.display = 'none';
      }
    }
	</script>
